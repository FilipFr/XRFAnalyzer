<Page x:Class="XRFAnalyzer.Views.Pages.QuantitativeAnalysisPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:XRFAnalyzer.Views.Pages"
      xmlns:controls="clr-namespace:XRFAnalyzer.Views.UserControls"
      xmlns:behaviors="http://schemas.microsoft.com/xaml/behaviors"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QuantitativeAnalysisPage">

    <Grid Background="{StaticResource LightThemeSecondaryColor}">
        <Grid.RowDefinitions>
            <RowDefinition Height="64"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button 
            Style="{StaticResource OperationMenuButton}"
            Click="GoBack">
            <controls:MenuButtonContent
                PackIconStyle="{StaticResource OperationPackIconStyle}"
                PackIconKind="Arrowleftthick"
                LabelStyle="{StaticResource OperationMenuButtonLabel}"
                LabelContent="{Binding LocalizationResourceManager[OperationMenuQuantitativeAnalysisLabel]}"/>
        </Button>
        <Grid
            Grid.Row="1"
            Background="{DynamicResource LightThemeSecondaryColorHighlight}"
            Panel.ZIndex="2"
            >
            <StackPanel
                Margin="16">
                <DockPanel>
                    <Label
                        DockPanel.Dock="Left"
                        Content="{Binding LocalizationResourceManager[XRaySourceSpectrumFileLabel]}"/>
                    <Label
                        Content="{Binding SourceSpectrumViewModel.CurrentFile}"
                        />
                </DockPanel>
                <Button 
                        x:Name="SourceSpectrumLoadButton"
                        Style="{StaticResource MainMenuButton}"
                        ToolTip="{Binding LocalizationResourceManager[XRaySourceSpectrumLoad]}"
                        Command="{Binding SourceSpectrumViewModel.Load}">
                    <behaviors:Interaction.Triggers>
                        <behaviors:EventTrigger EventName="Click">
                            <behaviors:InvokeCommandAction Command="{Binding SwitchToSourceSpectrumViewModelCommand}" />
                        </behaviors:EventTrigger>
                    </behaviors:Interaction.Triggers>
                    <controls:MenuButtonContent
                            PackIconStyle="{StaticResource MainMenuButtonIcon}"
                            PackIconKind="Applicationimport"
                            LabelContent="{Binding LocalizationResourceManager[XRaySourceSpectrumLoad]}"
                            LabelStyle="{StaticResource MainMenuButtonLabel}"
                            />
                </Button>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Label
                    Grid.Row="0" Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="16 0 0 0"
                    Foreground="WhiteSmoke"
                    VerticalAlignment="Center"
                    Content="{Binding LocalizationResourceManager[DetectorChoiceLabel]}"/>
                    <ComboBox
                    Grid.Row="0" Grid.Column="1"
                    Margin="8 4"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    SelectedItem="{Binding ViewM.CurrentDetector}"
                    ItemsSource="{Binding ViewM.DetectorsGrouped}"
                    DisplayMemberPath="Name"
                    />
                    <Label
                    Grid.Row="1" Grid.Column="0"
                    HorizontalAlignment="Left"
                    Margin="16 0 0 0"
                    Foreground="WhiteSmoke"
                    VerticalAlignment="Center"
                    Content="{Binding LocalizationResourceManager[WindowChoiceLabel]}"/>
                    <ComboBox
                    Grid.Row="1" Grid.Column="1"
                    Margin="8 4"
                    IsEnabled="True"
                    IsEditable="True" IsReadOnly="True" Text="Please Select"
                    VerticalContentAlignment="Center"
                    HorizontalContentAlignment="Center"
                    SelectedItem="{Binding ViewM.CurrentDetector.SelectedWindow}"
                    ItemsSource="{Binding ViewM.CurrentDetector.Configurations}"
                    DisplayMemberPath="Window"
                    />
                </Grid>
            </StackPanel>
        </Grid>
    </Grid>
</Page>
