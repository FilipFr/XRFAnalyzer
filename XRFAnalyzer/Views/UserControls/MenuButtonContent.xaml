<UserControl x:Class="XRFAnalyzer.Views.UserControls.MenuButtonContent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:XRFAnalyzer.Views.UserControls"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="400">

    <DockPanel VerticalAlignment="Center" HorizontalAlignment="Left">
        <materialDesign:PackIcon Height="32" Width="32" Margin="16 0 16 0" Kind="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MenuButtonContent}}, Path=PackIconKind}"  Foreground="WhiteSmoke" DockPanel.Dock="Left" VerticalAlignment="Center" VerticalContentAlignment="Stretch" HorizontalAlignment="Left"/>
        <Label Margin="0 0 16 0" FontSize="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MenuButtonContent}}, Path=LabelFontSize}" HorizontalContentAlignment="Left" Foreground="Whitesmoke" Content="{Binding RelativeSource={RelativeSource AncestorType={x:Type local:MenuButtonContent}}, Path=LabelContent}"></Label>
    </DockPanel>
</UserControl>
